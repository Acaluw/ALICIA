BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Main BoxLayout
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        # Camera and Text BoxLayout
        BoxLayout:
            size_hint_x: 0.75
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 0.4  # Color blanco para el fondo del área de contenido
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]

        # Text Area
        BoxLayout:
            size_hint_x: 0.25
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 0.4  # Color blanco para el fondo del área de contenido
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]

        
    # Voice BoxLayout
    BoxLayout:
        size_hint_y: None
        height: 100
        canvas.before:
            Color:
                rgba: 0.4, 0.4, 0.4, 0.4  # Color blanco para el fondo del área de contenido
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [10]