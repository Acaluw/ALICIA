BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Main BoxLayout
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        height: cam.height

        # Camera and Text BoxLayout
        BoxLayout:
            size_hint_x: 0.75
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 0.4  # Color blanco para el fondo del área de contenido
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            Camera:
                id: cam
                resolution: (1280, 720)
                size_hint: 1, 1
                pos_hint: {'x':0, 'y':0}
                play: True

        # Text Area
        BoxLayout:
            size_hint_x: 0.25
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 0.4  # Color blanco para el fondo del área de contenido
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            Button:
                text: 'Capturar'
                on_press: app.cameraImgCapture()

        
    # Voice BoxLayout
    BoxLayout:
        size_hint_y: None
        height: 100
        canvas.before:
            Color:
                rgba: 0.4, 0.4, 0.4, 0.4  # Color blanco para el fondo del área de contenido
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [10]